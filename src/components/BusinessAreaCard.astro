---
import { Icon } from "astro-icon/components";
interface Props {
  title: string;
  iconName: string;
}

const { title, iconName } = Astro.props;
---

<div class="bg-white rounded-lg shadow-lg">
  <div
    class="px-6 py-4 bg-gradient-to-tr to-blue-400 from-blue-300 rounded-t-lg"
  >
    <Icon name={iconName} class="mr-2 text-blue-800" size={25} />
  </div>
  <div class="flex flex-col items-start gap-3 p-6 grow">
    <h3 class="text-2xl font-bold">
      {title}
    </h3>
    <slot />
  </div>
</div>
