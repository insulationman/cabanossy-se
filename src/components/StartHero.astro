---
import Logo from "../assets/Cabanossy-Snurra_nobg_lightblue.svg";
import { Image } from "astro:assets";
import CloudPattern from "../assets/grain.svg";
---

<div class="gap-8 grid grid-cols-1 md:grid-cols-2 bg-gray-100">
  <div
    class="h-[550px] sm:h-[600px] col-span-2 flex flex-col justify-center items-center p-3 md:p-16 bg-gradient-to-tr from-blue-50 to-blue-100 bg-repeat"
    style={{ backgroundImage: `url(${CloudPattern.src})` }}
  >
    <Image
      src={Logo}
      class="h-32 w-32 md:h-48 md:w-48 shrink rounded-full bg-blue-900"
      alt="cabanossy logo"
      decoding="async"
      loading={"eager"}
      style={{ backgroundImage: `url(${CloudPattern.src})` }}
    />
    <div class="flex flex-col py-6 md:py-8 text-center gap-5 items-center">
      <h1 class="text-6xl sm:text-4xl md:text-6xl md:leading-tight font-black">
        Upplev utveckling
      </h1>
      <p class="text-2xl md:text-3xl font-light leading-normal">
        med kreativ och h√•llbar IT
      </p>
    </div>
  </div>
</div>
