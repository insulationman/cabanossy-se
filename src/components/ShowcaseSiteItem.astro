---
interface Props {
  title: string;
  description: string;
  buttontext: string;
  link: string;
  image: ImageMetadata;
}
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";

const { title, description, buttontext, link, image } = Astro.props;
---

<div class="bg-white flex rounded-xl shadow-lg relative p-6 gap-5">
  <!-- <div class="text-white -rotate-90 text-lg">WEBPLATS</div> -->

  <div class="flex flex-col items-center justify-center grow">
    <Image src={image} class="rounded-lg" width="250" alt={title + " logo"} />
  </div>
  <div class="grow flex flex-col">
    <h1 class="text-2xl font-bold">
      {title}
    </h1>
    <p>
      {description}
    </p>
  </div>

  <a
    href={link}
    referrerpolicy="no-referrer"
    target="_blank"
    title="Öppnar sidan för {title} i ny flik"
    class="absolute right-6 top-6 rounded-md cursor-pointer hover:bg-neutral-100"
  >
    <Icon name="mdi:open-in-new" class="w-6 h-6 text-neutral-500" />
  </a>
</div>
