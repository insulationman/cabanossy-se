---
interface Props {
  icontext: string;
  title: string;
  subtitle: string;
  description: string;
}

const { icontext, title, subtitle, description } = Astro.props;
---

<li class="mb-6 md:mb-0 col-span-1">
  <div class="flex items-center">
    <div
      class="z-10 flex items-center justify-center w-8 h-8 rounded-full ring-0 ring-white bg-blue-900 sm:ring-8 dark:ring-gray-900 shrink-0 text-white font-bold"
    >
      {icontext}
    </div>
    <div class="hidden md:flex w-full bg-gray-200 h-0.5 dark:bg-gray-700"></div>
  </div>
  <div class="mt-3 sm:pe-8">
    <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
      {title}
    </h3>
    <span
      class="block mb-2 text-md font-normal leading-none text-gray-400 dark:text-gray-500 mt-1"
    >
      {subtitle}
    </span>
    <p class="text-small font-normal text-gray-500 dark:text-gray-400">
      {description}
    </p>
  </div>
</li>
