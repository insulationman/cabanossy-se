---
import { getCollection, getEntry, type CollectionEntry } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import Logo from "../../assets/Cabanossy-Snurra_nobg_lightblue.svg";
import type { ImageMetadata } from "astro";

interface Props {
  post: CollectionEntry<"posts">;
}

export async function getStaticPaths() {
  const blogEntries = await getCollection("posts");
  return blogEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: {
      post: entry,
    },
  }));
}
import { Image } from "astro:assets";

const { post } = Astro.props;

const author = await getEntry(post.data.author);

const { Content } = await post.render();
---

<Layout title={post.data.title} description={post.data.description}>
  <div class="h-[250px] flex flex-col items-center justify-center">
    <div class="flex flex-col items-center gap-8">
      <a href="/">
        <Image
          src={Logo}
          alt="Cabanossy Snurra logo"
          class={"h-24 w-24 md:h-32 md:w-32 shrink rounded-full bg-blue-900 hover:shadow-lg transition-shadow "}
        />
      </a>
    </div>
  </div>
  <div class="pb-12 md:pb-20 px-3 xl:px-0">
    <div class="max-w-[1100px] mx-auto lg:flex">
      <div class="bg-white shadow-xl rounded-xl p-6 md:p-8">
        <div class="lg:flex gap-8">
          <div class="prose-lg pb-8">
            <h1 class="text-4xl font-bold text-gray-900 mb-6">
              {post.data.title}
            </h1>
            <!-- List badges for tags -->
            <div class="flex">
              <span class="pr-2 text-gray-600 font-semibold">Taggar:</span>
              {
                post.data.tags.map((tag) => (
                  <span class="bg-blue-600 text-white text-sm font-semibold px-3 py-1 rounded-full mr-2 flex items-center">
                    {tag}
                  </span>
                ))
              }
            </div>
            <Content />
          </div>
        </div>
      </div>
      <div
        class="bg-gray-200 mt-4 shadow-sm rounded-xl lg:rounded-l-none p-8 min-w-64 self-start"
      >
        <Image
          src={author.data.image}
          alt={author.data.name + " profile picture"}
          width={150}
          height={150}
          class="rounded-full mx-auto mb-6 border-blue-600"
        />
        <h2 class="text-xl font-bold text-gray-900 mb-2">
          {author.data.name}
        </h2>
        <p class="text-gray-700">{author.data.bio}</p>
      </div>
    </div>
  </div>
</Layout>
